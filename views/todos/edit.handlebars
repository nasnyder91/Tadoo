<h1>Edit Tadoo</h1>
<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card green lighten-5">
      <div class="card-content">
        <div class="container">
          <form action="/todos/{{todo.id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="row">
              <div class="input-field col s12">
                <input type="text" name="title" value="{{todo.title}}" required>
                <label for="name">Title</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input type="text" name="description" value="{{todo.description}}">
                <label for="description">Description</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s11">
                <input type="text" name="date" class="datepicker" {{#if todo.dueDate}}value="{{formatDate todo.dueDate}}"{{/if}}>
                <label for="date">Date</label>
              </div>
              <div class="col s1">
                <a class="btn-floating btn-small waves-effect green lighten-4"><i class="material-icons black-text" onclick="clearInput('datepicker')">delete</i></a>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s11">
                <input type="text" name="time" class="timepicker" {{#if todo.dueTime}}value="{{formatTime todo.dueTime}}"{{/if}}>
                <label for="time">Time</label>
              </div>
              <div class="col s1">
                <a class="btn-floating btn-small waves-effect green lighten-4"><i class="material-icons black-text" onclick="clearInput('timepicker')">delete</i></a>
              </div>
            </div>
            <button class="btn green darken-3" type="submit">Save</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
